@model ChatWebApp.Models.Rank

@{
	ViewData["Title"] = "Delete";
}

<div class="default">


	<h3 class="header-text">Delete @Html.DisplayFor(model => model.Username)'s rank</h3>

	<h4 class="def-text" >Are you sure you want to delete this?</h4>
	<div>
		<hr />
		<dl class="row">
			<dt class="col-sm-2 def-text">
				@Html.DisplayNameFor(model => model.Username)
			</dt>
			<dd class="col-sm-10 def-text to-left">
				@Html.DisplayFor(model => model.Username)
			</dd>
			<dt class="col-sm-2 def-text">
				@Html.DisplayNameFor(model => model.NumeralRank)
			</dt>
			<dd class="col-sm-10 def-text to-left">
				@Html.DisplayFor(model => model.NumeralRank)
			</dd>
			<dt class="col-sm-2 def-text">
				@Html.DisplayNameFor(model => model.Feedback)
			</dt>
			<dd class="col-sm-10 def-text to-left">
				@Html.DisplayFor(model => model.Feedback)
			</dd>
			<dt class="col-sm-2 def-text">
				@Html.DisplayNameFor(model => model.SubmitTime)
			</dt>
			<dd class="col-sm-10 def-text to-left">
				@Html.DisplayFor(model => model.SubmitTime)
			</dd>
		</dl>

		<form asp-action="Delete">
			<input type="hidden" asp-for="Username" />
			<input type="submit" value="Delete" class="btn btn-danger" /> |
			<a asp-action="Index">Back to List</a>
		</form>
	</div>
</div>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:radius="2dp"
        android:topRightRadius="0dp"
        android:bottomRightRadius="0dp"
        android:bottomLeftRadius="0dp"
        android:background="@drawable/form_background"
        android:width="1dp"
        android:orientation="vertical"
        android:color="@android:color/black"
        >

<!--    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:radius="2dp"
        android:topRightRadius="0dp"
        android:bottomRightRadius="0dp"
        android:bottomLeftRadius="0dp"
        android:background="@drawable/contact_background"
        android:width="1dp"
        android:orientation="vertical"
        android:color="@android:color/black"
        >-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/contact_profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                tools:src="@drawable/defaultimage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/contact_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="27dp"
                    android:textStyle="bold"
                    tools:text="Username"

                    />

                <TextView
                    android:id="@+id/contact_last_massage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:text="Hi, how are yofffffffdddfu?" />

                <!--
            </LinearLayout>
-->

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/contact_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:maxLines="1"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            tools:text="10:0000000000" />
    </RelativeLayout>

</LinearLayout>